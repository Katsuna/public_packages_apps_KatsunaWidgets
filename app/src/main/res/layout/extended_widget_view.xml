<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:id="@+id/extendedRoot"
    android:background="@android:color/white"
    android:minHeight="1000dp"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/widgetTitleEx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="WEATHER"
            android:textColor="@color/bb_inActiveBottomBarItemColor"
            android:textSize="24sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="1"

                >
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/state_now"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="NOW"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="24sp" />
                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_weight="1"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/state_week"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="WEEK"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"

                >
                <TextView
                    android:id="@+id/state_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DAY"
                    android:textAlignment="center"

                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:gravity="right" />
                </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:gravity="center_vertical|center_horizontal|center">

            <TextView
                android:id="@+id/widgetTemperatureTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/widgetExTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 Â°C"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="18sp"
                />
            <!--android:src="@drawable/ic_refresh_white_24dp"-->


        </LinearLayout>


        <ImageView
            android:id="@+id/widgetExIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/k48_clouds"
            />
        <TextView
            android:id="@+id/widgetExDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/widgetHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Humidity: 0 %"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/precipitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Chance of rain/snow: 0 %"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/widgetExWind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:text="Wind: 0 m/s"
            android:textColor="@android:color/black"
            android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:gravity="right" >

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAlignment="center"

            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:gravity="right" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>

