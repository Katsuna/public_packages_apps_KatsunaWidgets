<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/weekRoot"
    android:background="@drawable/widget_back"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/upper_corners"
            >

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="54dp"

                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawablePadding="12dp"
                    android:text="@string/weather_title"
                    android:textAllCaps="true"
                    android:layout_margin="12dp"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:layout_weight="0.6"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="left"
                    android:drawableLeft="@drawable/ic_widgeticons_weather"
                    android:layout_alignBaseline="@+id/back"
                    android:layout_alignBottom="@+id/back"
                    android:layout_alignParentStart="true"
                    android:fontFamily="sans-serif-medium"/>

                <Button
                    android:id="@+id/back"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableLeft="@drawable/ic_x_icon"
                    android:gravity="right"
                    android:text="@string/close"
                    android:textSize="20dp"
                    android:textAllCaps="false"
                    android:drawablePadding="12dp"
                    android:background="@drawable/rounded_button"/>

            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="10000dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:baselineAligned="false"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_city"
                    android:layout_margin="12dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"

                    android:weightSum="1">


                    <TextView
                        android:id="@+id/widgetTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_temp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:textColor="@android:color/black"
                        android:textSize="34dp"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:id="@+id/widgetIcon"
                        android:layout_marginBottom="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/k48_clouds"
                        android:fontFamily="sans-serif-medium"
                        android:layout_weight="0.09" />
                    <!--android:src="@drawable/ic_refresh_white_24dp"-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/widgetDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:textColor="@android:color/black"
                        android:maxLines="1"
                        android:textSize="20dp"
                        android:fontFamily="sans-serif-medium"/>

                    <!--<TextView-->

                        <!--android:id="@+id/widgetWindcomma"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="@string/comma"-->
                        <!--android:textColor="@android:color/black"-->
                        <!--android:textSize="16sp" />-->

                    <!--<TextView-->
                        <!--android:id="@+id/widgetWind"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_margin="2dp"-->
                        <!--android:text="@string/default_wind"-->
                        <!--android:textColor="@android:color/black"-->
                        <!--android:textSize="16sp" />-->

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E000000"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"

            android:gravity="center_horizontal"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="2dp"

                >

                <TextView
                    android:id="@+id/state_day_week"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/common_grey300"
                    android:gravity="center"
                    android:text="@string/week"
                    android:drawableBottom="@drawable/ic_1495041635_minus"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="2dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/state_day_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableBottom="@drawable/ic_1495041635_minus_holo"
                    android:gravity="right"
                    android:text="@string/day"
                    android:textAlignment="center"
                    android:textColor="@color/common_grey600"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E000000"
            />

