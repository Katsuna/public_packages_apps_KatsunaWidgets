<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/extendedRoot"
    android:background="@drawable/widget_back"
    >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxWidth="10000dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:baselineAligned="false"
                android:paddingLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_city"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"

                    android:weightSum="1">


                    <TextView
                        android:id="@+id/widgetTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_temp"
                        android:textColor="@android:color/black"
                        android:textSize="34sp" />

                    <ImageView
                        android:id="@+id/widgetIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:src="@drawable/k48_clouds"
                        android:layout_weight="0.09" />
                    <!--android:src="@drawable/ic_refresh_white_24dp"-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/widgetDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_data"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />

                    <TextView

                        android:id="@+id/widgetWindcomma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comma"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/widgetWind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:text="@string/default_wind"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/back"
                        android:layout_width="121dp"
                        android:layout_height="110dp"
                        android:layout_marginBottom="-5dp"
                        android:layout_marginRight="-5dp"
                        android:layout_marginTop="-5dp"
                        android:padding="40dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_x_icon" />


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="2dp"
            android:paddingBottom="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="2dp"

                >

                <TextView
                    android:id="@+id/state_now"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableBottom="@drawable/ic_1495041635_minus"
                    android:text="@string/now"
                    android:textAlignment="center"

                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="2dp"

                >

                <TextView
                    android:id="@+id/state_week"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/common_grey100"
                    android:gravity="center"
                    android:text="@string/week"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="2dp"

                >

                <TextView
                    android:id="@+id/state_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/common_grey100"
                    android:gravity="center"
                    android:text="@string/day"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:layout_marginLeft="20dp"
        android:gravity="left">



        <TextView
            android:id="@+id/widgetExDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_data"
            android:textColor="@android:color/black"
            android:padding="2dp"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/widgetHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/dedault_humidity"
            android:padding="3dp"
            android:textColor="@android:color/black"
            android:textSize="20dp" />




</LinearLayout>
    </LinearLayout>


</RelativeLayout>

